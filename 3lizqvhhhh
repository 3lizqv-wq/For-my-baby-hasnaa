    <div id="card">
        <div id="question-ui">
            <div class="gif-container">
                <img id="mainGif" src="https://c.tenor.com/upJMamM853rAAAAC/tenor.gif" alt="Begging">
            </div>
            <h1>Will you be my Valentine, <span class="name-highlight">Hasnaa</span>?</h1>
            <div class="btn-group">
                <button id="yesBtn">Yes! üíñ</button>
                <button id="noBtn">No</button>
            </div>
        </div>

        <div id="success-ui" class="hidden">
            <div class="gif-container">
                <img src="https://c.tenor.com/fI4EUb1GIUhAAAAC/tenor.gif" alt="Celebration">
            </div>
            <h1>Best decision ever, Hasnaa! ü•∞üåπ</h1>
        </div>
    </div>

    <script>
        const noBtn = document.getElementById('noBtn');
        const yesBtn = document.getElementById('yesBtn');
        const questionUI = document.getElementById('question-ui');
        const successUI = document.getElementById('success-ui');
        
        const taunts = ["Wrong way!", "Nice try!", "Try again!", "Nope!", "Can't touch this!", "Click Yes instead! üòâ"];
        let yesScale = 1;

        window.onload = () => {
            const rect = yesBtn.getBoundingClientRect();
            noBtn.style.left = (rect.right + 30) + 'px';
            noBtn.style.top = rect.top + 'px';
        };

        function moveNoButton() {
            const padding = 60;
            const x = Math.random() * (window.innerWidth - noBtn.offsetWidth - padding);
            const y = Math.random() * (window.innerHeight - noBtn.offsetHeight - padding);
            noBtn.style.left = `${Math.max(padding, x)}px`;
            noBtn.style.top = `${Math.max(padding, y)}px`;
            noBtn.innerText = taunts[Math.floor(Math.random() * taunts.length)];
            yesScale += 0.2;
            yesBtn.style.transform = `scale(${yesScale})`;
        }

        noBtn.addEventListener('mouseover', moveNoButton);
        noBtn.addEventListener('touchstart', (e) => { e.preventDefault(); moveNoButton(); });

        yesBtn.addEventListener('click', () => {
            questionUI.classList.add('hidden');
            successUI.classList.remove('hidden');
            noBtn.style.display = 'none';
            confetti({
                particleCount: 200,
                spread: 100,
                origin: { y: 0.6 },
                colors: ['#ff4d6d', '#d63384', '#ffffff']
            });
        });
    </script>
